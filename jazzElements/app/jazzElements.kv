#:set colorAppBgd (0.282, 0.31, 0.34, 1)
#:set colorMeasure ( 0.46, 0.5, 0.55, 1)

<WdgRoundedButton@BoxLayout>
    padding:0,0,0,0
    spacing:0
    background_color: 0,0,0,0
    size_hint: None,None
    bgd: 0.46, 0.5, 0.55, 1
    canvas.before:
        Color:
            rgba: colorMeasure
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [5,]

<WdgMeasure@wdgRoundedButton>
    size_hint: None,None
    size: 175,75
    BoxLayout:
        orientation:'vertical'
        padding:0,0,0,0
        spacing:0
        BoxLayout:
            orientation:'horizontal'
            padding:0,0,0,0
            spacing:0
            id:chords

<WdgChordName@Button>
    note:'%'
    alt:''
    type:''
    duration:1
    size_hint:(root.duration,1)
    font_name:'realbook.ttf'
    background_color:0,0,0,0
    text:'[size=20]'+self.note+'[/size][size=15]'+self.alt+'[sup][size=10]'+self.type+'[/size][/sup]'
    color: colorAppBgd if root.note=='%' else (1,1,1,1)
    markup:'true'

<WdgProgression@BoxLayout>:
    orientation:'vertical'
    title:'Unknown'
    Label:
        id:title
        font_name:'realbook.ttf'
        font_size:30
        size_hint:(1,.2)
        text:root.title.upper()

    StackLayout:
        size_hint:(1,.8)
        id:measures
        orientation:'rl-tb'
        spacing:5
        padding:5,5,5,5


<ScrMain@Screen>
    name:'scrMain'
    WdgProgression:
        id:progression

